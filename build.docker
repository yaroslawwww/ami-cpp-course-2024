FROM ubuntu:22.04

RUN echo "Don't use cache #3" > /.force_full_rebuild

RUN apt-get update && apt-get install -y wget gnupg

RUN apt-get update && DEBIAN_FRONTEND="noninteractive" apt-get install -y \
    build-essential \
    cmake \
    ccache \
    ninja-build \
    clang-tools-14 \
    g++-10

RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    git

RUN pip3 install PyYAML \
                 pytz \
                 docopt \
                 requests \
                 cpplint \
                 numpy \
                 pytest \
                 Pillow

RUN apt-get update && apt-get install -y \
    libpoco-dev \
    libjsoncpp-dev \
    libboost-dev \
    libpng-dev \
    libre2-dev

RUN apt-get update && apt-get install -y clang-format-14 clang-tidy-14

